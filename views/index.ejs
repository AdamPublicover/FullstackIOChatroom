<!DOCTYPE html>
<html>
    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <title> Chatroom - FS</title>

        <link rel="stylesheet" href="index.css">

    </head>
    <body>
        <div class="container non-chat-container">
            <h1>Coders Chat</h1>
        </div>
        <div class="container chat_container">
            <section>
                <div id= "update_name" class="form-group name-update-area">
                    <label for="username"> Change Room: </label><br>
                    <select id="newroomname" class="form-control-inline">
                        <option>Alpha</option>
                        <option>Bravo</option>
                        <option>Charlie</option>
                        <option>Delta</option>
                    </select>
                    <button id="changeroom" type="button" class="btn-sm btn-primary"> Change </button>
                </div>
            </section>

            <div class="container overflow-auto">
                <section id="chatroom">
                    <section id="feedback"></section>
                </section>
            </div>

            <div id="rooms"></div>
            <div id="users"></div>

            <section>
                <div id="input_zone" class="form-group message-insert-area">
                    <label for="message"> Enter your message here: </label><br>
                    <input id="message" class="vertical-align form-control-lg" type="text" />
                    <button id="send_message" type="button" class="btn-lg btn-primary">SEND</button>
                </div>
            </section>

            <script src="http://code.jquery.com/jquery-latest.min.js"></script>
            <script src="chat.js"></script>
        </div>
    </body>
</html>